<configuration>

    <!-- 文件日志输出，生成每日滚动日志 -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- 日志文件路径，Android 中存储在应用的私有目录 -->
        <file>${BASE_PATH}/logs/app.log</file>

        <!-- 每日滚动日志策略 -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${BASE_PATH}/logs/app.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>  <!-- 最大保留 7 天日志 -->
            <totalSizeCap>100MB</totalSizeCap>  <!-- 总日志文件大小限制 100MB -->
        </rollingPolicy>

        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Logcat 输出，适用于 Android Studio 的调试 -->
    <appender name="LOGCAT" class="com.github.tony19.logback.classic.AndroidLogcatAppender">
        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>
    </appender>

    <!-- 日志级别配置 -->
    <logger name="com.sik.netty_server" level="DEBUG" additivity="false">
        <appender-ref ref="FILE" />
        <appender-ref ref="LOGCAT" />
    </logger>

    <!-- 根日志器，默认级别为 INFO -->
    <root level="INFO">
        <appender-ref ref="FILE" />
        <appender-ref ref="LOGCAT" />
    </root>

</configuration>
